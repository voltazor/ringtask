<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.Launch" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
    </style>

    <style name="AppTheme.Login" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Button"/>

    <style name="Button.Thick" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

</resources>