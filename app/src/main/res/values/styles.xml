<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.Launch" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
    </style>

    <style name="AppTheme.Login" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>